# =================================
# BE FIT BACKEND CONFIGURATION
# =================================

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS - Comma separated origins (use * for all in dev)
ALLOWED_ORIGINS=*

# =================================
# GOOGLE GEMINI AI
# =================================
GEMINI_API_KEY=your_gemini_api_key_here

# =================================
# SUPABASE
# =================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# For backend operations that need elevated permissions
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# SECURITY
# =================================
# JWT_SECRET=your_jwt_secret_for_additional_signing

# =================================
# LOGGING
# =================================
LOG_LEVEL=info
